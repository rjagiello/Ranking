@model IEnumerable<Ranking.Models.Member>
@{
    ViewBag.Title = "Zawodnicy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @if (Model.Any())
    {
        <table class="table table-dark table-hover">
            <tr>
                <th>Pozycja</th>
                <th>Zawodnik</th>
                <th>Drużyna</th>
                <th style="text-align:center">Strzelone bramki</th>
            </tr>
            @foreach (var rec in Model)
            {
                <tr>
                    <td>@rec.Lp</td>
                    @if (rec.IsCaptain)
                    {
                        <td>@rec.MName (Kapitan)</td>
                    }
                    else
                    {
                        <td>@rec.MName</td>
                    }
                    <td>@rec.Users.Name</td>
                    <td style="text-align:center">@rec.Goals</td>
                </tr>
            }
        </table>
    }
</div>
