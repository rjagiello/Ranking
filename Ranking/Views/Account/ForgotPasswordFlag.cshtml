@model Ranking.Models.Users
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.FLag)
{
    <div style="margin-top:150px;">
        <div style="text-align:center; font-size:xx-large; padding-bottom: 70px;">
            <p><b>Zgłoszenie zostało przyjęte, niedługo dostaniesz link do resetowania hasła</b></p>
        </div>
    </div>
}
else
{

    <div style="margin-top:150px;">
        <div style="text-align:center; font-size:xx-large; padding-bottom:20px;">
            <p><b>Wyślij zgłoszenie</b></p>
        </div>
        @using (Html.BeginForm("ForgotPasswordFlag", "Account", FormMethod.Post, new { @style = "width:400px; margin-left: auto; margin-right: auto;" }))
        {
            @Html.AntiForgeryToken()
            <div id="login-error" style="color:red;">
                @Html.ValidationMessage("loginerror", "")
            </div>
            <div class="form-group" style="margin-left:auto;">
                @Html.LabelFor(o => o.Name, "Nazwa drużyny:")
                @Html.DropDownListFor(o => o.Name, ViewBag.UserList as SelectList, "--Wybierz--", new { @style = "width: 100%", @class = "form-control", @required = "required" })
                <div class="login-validation-message">
                    @Html.ValidationMessageFor(o => o.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(o => o.Email, "Adres E-mail")
                @Html.TextBoxFor(o => o.Email, new { @style = "width: 100%", @class = "form-control", @required = "required"})
                <div class="login-validation-message">
                    @Html.ValidationMessageFor(o => o.Email)
                </div>
            </div>

            <input type="submit" value="Wyślij" class="btn btn-default" style="height:40px;" />
        }
    </div>

}
@section Scripts
{
    <script src="~/Scripts/jquery-2.2.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
